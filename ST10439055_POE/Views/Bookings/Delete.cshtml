@model ST10439055_POE.Models.Bookings
@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete Booking
                    </h4>
                </div>
                <div class="card-body">
                    <partial name="_AlertMessages" />
                    <h3 class="text-danger">Are you sure you want to delete this booking?</h3>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BookingDate)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.BookingDate)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Event)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Event.EventName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Venue)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Venue.Location)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="BookingId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>