@{
    ViewData["Title"] = "About EventEase";
}

<div class="container">
    <h1 class="display-4">About EventEase</h1>
    <p class="lead">Your complete event management solution</p>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3>How It Works</h3>
                </div>
                <div class="card-body">
                    <h5>Core Features:</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">✓ Event creation and management</li>
                        <li class="list-group-item">✓ Venue booking system</li>
                        <li class="list-group-item">✓ User-friendly dashboard</li>
                        <li class="list-group-item">✓ CRUD operations for all entities</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h3>System Architecture</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5>Technology Stack:</h5>
                        <span class="badge bg-info text-dark me-2">ASP.NET Core MVC</span>
                        <span class="badge bg-info text-dark me-2">Entity Framework</span>
                        <span class="badge bg-info text-dark me-2">SQL</span>
                    </div>
                    <div class="mb-3">
                        <h5>Key Components:</h5>
                        <ol>
                            <li>Models (Event, Venue, Booking)</li>
                            <li>Controllers with CRUD actions</li>
                            <li>Views with responsive design</li>
                            <li>Database context for data persistence</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-warning text-dark">
            <h3>User Flow</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <div class="p-3 border rounded bg-light">
                        <h5>1. Create</h5>
                        <p>Add new events, venues, and bookings</p>
                        <i class="bi bi-plus-circle-fill text-primary" style="font-size: 2rem;"></i>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-3 border rounded bg-light">
                        <h5>2. Manage</h5>
                        <p>Edit or update existing records</p>
                        <i class="bi bi-pencil-square text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="p-3 border rounded bg-light">
                        <h5>3. Track</h5>
                        <p>View all data in organized tables</p>
                        <i class="bi bi-table text-info" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4 mb-5">
        <div class="card-header bg-info text-white">
            <h3>Technical Implementation</h3>
        </div>
        <div class="card-body">
            <h5>Key Programming Concepts Used:</h5>
            <div class="row">
                <div class="col-md-6">
                    <ul>
                        <li>MVC pattern implementation</li>
                        <li>Entity Framework data access</li>
                        <li>Model-View binding</li>
                    </ul>
                </div>
            </div>
            <div class="alert alert-secondary mt-3">
                <strong>Note:</strong> This application is a CLDV6211 POE. By Nicholas Farquhar ST10439055.
            </div>
        </div>
    </div>
</div>